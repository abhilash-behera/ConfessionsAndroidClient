<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/cardView"
        app:cardElevation="4dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="0dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/confessions_logo"
                android:background="#cdcece"
                android:id="@+id/postImage"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/postImage"
                android:text="Here goes the title of the post. It may be long. Sooo long that it reaches more than two lines but I will show only two lines ;-)"
                android:textSize="16sp"
                android:textColor="#000"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/postTitle"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/postImage"
                android:layout_alignParentBottom="true"
                android:text="10 days ago, 12:00am"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:id="@+id/postTime"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>